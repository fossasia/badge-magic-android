<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/square_image_dimension"
            android:layout_height="@dimen/square_image_dimension"
            android:layout_gravity="center"
            android:layout_margin="@dimen/drawable_image_margin"
            android:contentDescription="@string/image_bitmap_description"
            android:scaleType="fitCenter"
            android:src="@drawable/mix1" />

        <TextView
            android:id="@+id/title_tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/drawable_image_margin"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1" />
    </LinearLayout>
</androidx.cardview.widget.CardView>